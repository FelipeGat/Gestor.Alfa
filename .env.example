# Laravel Environment Variables
# Copy this file to .env and update with your local values

# Laravel Application
APP_NAME="Gestor Alfa"
APP_ENV=local
APP_KEY=base64:GENERATE_NEW_KEY_WITH_PHP_ARTISAN_KEY:GENERATE
APP_DEBUG=true
APP_URL=http://localhost:8080

# Session Configuration
SESSION_DOMAIN=localhost

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=gestor_alfa
DB_USERNAME=gestor_user
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache Configuration
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_DOMAIN=localhost
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true

# Mail Configuration (update with your email provider)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Security
BCRYPT_ROUNDS=12

# File Uploads
UPLOAD_MAX_SIZE=20480

# SSL/HTTPS
FORCE_HTTPS=false

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Performance
OPCACHE_ENABLE=0

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_DISK=local
BACKUP_SCHEDULE="0 2 * * *"

# MySQL Root Password (for Docker)
MYSQL_ROOT_PASSWORD=root_password

# Admin User (first setup)
ADMIN_EMAIL=admin@example.com
ADMIN_NAME=Administrator
ADMIN_PASSWORD=password
